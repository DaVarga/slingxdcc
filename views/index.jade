extends layout

block body
    .navbar.navbar-inverse.navbar-static-top(role="navigation", ng-controller='SearchBarCtrl')
        .navbar-header
            button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-ex1-collapse")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="#") Slingxdcc


        .collapse.navbar-collapse.navbar-ex1-collapse
            ul.nav.navbar-nav
                li
                    a(href="packets") Packets
                li
                    a(href="downloads") Downloads
                li
                    a(href="settings") Settings

            form.navbar-form.navbar-right(role="search", ng-submit="setSearch()", style="width:350px")
                input.form-control(type="text", placeholder="Search", ng-model="searchString", typeahead="item for item in history | limitTo:8 | filter:$viewValue")
            p.navbar-text.pull-right Packets # {{packetCount.absPackets}}

    .container
        div(ng-view)

