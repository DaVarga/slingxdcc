extends layout

block body
    .navbar.navbar-inverse.navbar-static-top(role="navigation")
        .navbar-header
            button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-ex1-collapse")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/") Slingxdcc
                .navcount(ng-controller='NotificationCountCtrl')
                    span(tooltip="Downloads started", tooltip-placement="bottom").badge.badge-info {{notificationCount.dlstart}}
                    span &nbsp;
                    span(tooltip="Downloads finished", tooltip-placement="bottom").badge.badge-success {{notificationCount.dlsuccess}}
                    span &nbsp;
                    span(tooltip="Download errors", tooltip-placement="bottom").badge.badge-danger {{notificationCount.dlerror}}



        .collapse.navbar-collapse.navbar-ex1-collapse
            ul.nav.navbar-nav
                li
                    a(href="packets") Packets
                li
                    a(href="downloads") Downloads
                li
                    a(href="settings") Settings

            form.navbar-form.navbar-right(ng-controller='SearchBarCtrl', role="search", ng-submit="setSearch()")
                .right-inner-addon
                    span.glyphicon.glyphicon-search
                    input.topsearch.form-control(type="text", placeholder="Search", ng-model="searchString", typeahead="item for item in history | limitTo:8 | filter:$viewValue", ng-blur="rescueSearch()", ng-focus="restoreSearch()")
            span(ng-controller='PacketcountCtrl').navbar-text.pull-right Packets # {{packetCount.absPackets}}

    .container
        div(ng-view)

