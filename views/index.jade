extends layout

block body
    .navbar.navbar-inverse.navbar-static-top(role="navigation")
        .navbar-header
            button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-ex1-collapse")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="#") Slingxdcc


        .collapse.navbar-collapse.navbar-ex1-collapse
            ul.nav.navbar-nav
                li
                    a(href="packets") Packets
                li
                    a(href="downloads") Downloads
                li
                    a(href="settings") Settings
            form.navbar-form.navbar-right(role="search",ng-controller='SearchCtrl', ng-submit="setSearch()")
                .input-group(style="width:350px")
                    input.form-control(type="text", placeholder="Search", ng-model="searchString")
                    span.input-group-btn
                        button.btn.btn-default.dropdown-toggle(type="button",data-toggle="dropdown")
                            span.caret
                        ul(role="menu").dropdown-menu
                            li(ng-repeat="element in history")
                                a(ng-click="selectHistory(element)") {{element}}

    .container
        div(ng-controller='AppCtrl')
            div(ng-view)


    script(src='js/lib/angular/angular.js')
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')
    script(src='js/lib/jquery/jquery-2.0.3.min.js')
    script(src='bootstrap/js/bootstrap.min.js')
    script(src='js/user.js')